<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.sportplay" name="SportPlay" version="2.2.5" provider-name="M4T">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests" version="2.12.4"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.service" library="updater.py" start="startup"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="fr">SportPlay - Streaming Sport</summary>
    <description lang="fr">Streaming sportif via debrideurs. Football, NBA, MMA, Sports Mecaniques, Tennis, Rugby, NFL, Cyclisme.</description>
    <platform>all</platform>
    <assets><icon>icon.png</icon><fanart>fanart.jpg</fanart></assets>
  </extension>
</addon>
<addon id="repository.sportplay" name="SportPlay Repository" version="1.0.0" provider-name="M4T">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
  <extension point="xbmc.addon.repository" name="SportPlay Repository">
    <dir minversion="19.0.0">
      <info compressed="false">https://m4t-r.github.io/Sportplay/addons.xml</info>
      <checksum>https://m4t-r.github.io/Sportplay/addons.xml.md5</checksum>
      <datadir zip="true">https://m4t-r.github.io/Sportplay/zips/</datadir>
    </dir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="fr">Dépôt officiel SportPlay</summary>
    <description lang="fr">Dépôt officiel SportPlay. Streaming sportif via debrideurs.</description>
    <platform>all</platform>
    <assets><icon>icon.png</icon></assets>
  </extension>
</addon>
</addons>
